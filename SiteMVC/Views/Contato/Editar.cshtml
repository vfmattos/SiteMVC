@model ContatoModel

@{
    ViewData["Title"] = "Editar contatos";
}

<div class="text-center">
    <h2>Editar Contato</h2>

    <form asp-controller="Contato" asp-action="Editar" method="post">
        <input asp-for="@Model.Id" type="hidden">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input asp-for="@Model.Nome" type="text" class="form-control" placeholder="Digite o nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input asp-for="@Model.Email" type="text" class="form-control" placeholder="Digite o email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            <label for="celular">Celular</label>
            <input asp-for="@Model.Celular" type="text" class="form-control" placeholder="Digite o celular">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>
        <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    </form>
    <br />


    <div>
        <a class="btn btn-secondary btn-block" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
